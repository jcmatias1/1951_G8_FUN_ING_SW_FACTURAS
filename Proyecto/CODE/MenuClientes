    private void botonAgregarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        //BOTON Agregar
        //Validar los campos
        if (!validarCampos()) {
            return; // Si la validación falla, no continúa
        }
        //<editor-fold defaultstate="collapsed" desc="----VARIABLES DEL METODO----">
        String nombre = this.getCampoNombre().getText().trim();
        String apellido = this.getCampoApellido().getText().trim();
        String identificacion = this.getCampoIdentificacion().getText().trim();
        String tipoIdentificacion = (String) this.getIdentificacion().getSelectedItem();
        String direccion = this.getCampoDireccion().getText().trim();
        String telefono = this.getCampoTelefono().getText().trim();
        String correo = this.getCampoCorreo().getText().trim();
        //</editor-fold>

        Cliente cliente = new Cliente(nombre, apellido, direccion, correo, identificacion, tipoIdentificacion, telefono);
        getClientes().add(cliente);

        // Mostrar mensaje de éxito
        JOptionPane.showMessageDialog(
                this,
                "Cliente agregado exitosamente.",
                "Éxito",
                JOptionPane.INFORMATION_MESSAGE
        );

        // Limpiar los campos
        limpiarCampos();
    }                                            

    // Método para limpiar los campos
    private void limpiarCampos() {
        this.getCampoNombre().setText("");
        this.getCampoApellido().setText("");
        this.getCampoDireccion().setText("");
        this.getCampoCorreo().setText("");
        this.getCampoIdentificacion().setText("");
        this.getCampoTelefono().setText("");
        this.getIdentificacion().setSelectedIndex(0);
    }

    //Metodo para validar campos 
    public boolean validarCampos() {

        //<editor-fold defaultstate="collapsed" desc="----VARIABLES DEL METODO----">
        String nombre = this.getCampoNombre().getText().trim();
        String apellido = this.getCampoApellido().getText().trim();
        String identificacion = this.getCampoIdentificacion().getText().trim();
        String tipoIdentificacion = (String) this.getIdentificacion().getSelectedItem();
        String direccion = this.getCampoDireccion().getText().trim();
        String telefono = this.getCampoTelefono().getText().trim();
        String correo = this.getCampoCorreo().getText().trim();
        //</editor-fold>

        //<editor-fold defaultstate="collapsed" desc="----VALIDACION DE CAMPOS----">
        //VALIDACION DE NOMBRE
        if (nombre.isEmpty()) {
            mostrarError("Por favor, complete el nombre del cliente.");
            return false;
        }
        //VALIDACION DE APELLIDO
        if (apellido.isEmpty()) {
            mostrarError("Por favor, complete el apellido del cliente.");
            return false;
        }
        //VALIDACION DE TIPO DE IDENTIFICACION COMBO_BOX
        if (getOPCION_DEFECTO().equals(tipoIdentificacion)) {
            mostrarError("Por favor, seleccione un tipo de identificación válido.");
            return false;
        }
        //VALIDACION DE IDENTIFICACION
        if (identificacion.isEmpty()) {
            mostrarError("Por favor, complete la identificación del cliente.");
            return false;
        }
        //VALIDACION DE DIRECCION
        if (direccion.isEmpty()) {
            mostrarError("Por favor, complete la dirección del cliente.");
            return false;
        }
        //VALIDACION DE TELEFONO
        if (telefono.isEmpty()) {
            mostrarError("Por favor, complete el teléfono del cliente.");
            return false;
        }
        //VALIDACION DE SOLO NUMEROS EN TELEFONO
        if (!telefono.matches("\\d+")) {
            mostrarError("Por favor, ingrese un teléfono válido (solo números).");
            return false;
        }
        //VALIDACION DE 10 DIGITOS EN EL TELEFONO : 0983713509
        if (telefono.length() != 10) { // Ejemplo: verificar que tenga 10 dígitos
            mostrarError("El teléfono debe tener 10 dígitos.");
            return false;
        }
        //VALIDACION DE CORREO
        if (correo.isEmpty()) {
            mostrarError("Por favor, complete el correo del cliente.");
            return false;
        }
        //VALIDACION DE UN CORREO VERDADERO
        if (!correo.matches("^[\\w.-]+@[\\w.-]+\\.[a-zA-Z]{2,}$")) {
            mostrarError("Por favor, ingrese un correo válido.");
            return false;
        }
        //</editor-fold>
        return true;
    }

    // Método para mostrar mensajes de error
    private void mostrarError(String mensaje) {
        JOptionPane.showMessageDialog(
                this,
                mensaje,
                "Error",
                JOptionPane.ERROR_MESSAGE
        );
    }

    private void botonRegresarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        //BOTON REGRESAR 
        this.setVisible(false);
        this.getMenuPrincipal().setVisible(true);
    }                                             

    //metodo para agregar cliente
