    //metodo para calcular y actualizar los totales de los platos
    private void actualizarTotales() {
        //se crea una variable total para el total de los platos
        double total = 0.00;

        // Recorrer los JCheckBox y sumar los precios seleccionados
        total = platos.entrySet().stream().filter(entry -> (entry.getKey().isSelected())).map(entry -> entry.getValue()).reduce(total, (accumulator, _item) -> accumulator + _item);

        // Calcular IVA (15%)
        double totalIVA = total * 0.15;
        double totalConIVA = total * 1.15;

        // Actualizar los JLabel
        this.totalSinIVA.setText(String.format("%.2f", total)); //total sin iva
        this.IVAtotal.setText(String.format("%.2f", totalIVA)); //solamente el iva
        this.totalConIva.setText(String.format("%.2f", totalConIVA)); //total pago con iva 
    }

