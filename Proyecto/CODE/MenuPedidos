        initComponents();

        //Agregacion en HashMap de los platillos (variable, precio)
        platos.put(platoUno, 14.00);
        platos.put(platoDos, 14.00);

        // Agregar y llamar a los ItemListener a los JCheckBox
        platoUno.addItemListener(evt -> actualizarTotales());
        platoDos.addItemListener(evt -> actualizarTotales());

    }

