    private void OpcionActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        Aceptar.doClick(); //Al dar enter en el campo de Opcion se cliclea automaticamente el boton aceptar, ejecutando el metodo AceptarActionPerformed
    }                                      

    private void AceptarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        //BOTON Aceptar
        //Manejo de try catch para evitar la entrada de numeros
        try{
            switch (Integer.parseInt(this.Opcion.getText())) {
                case 1 ->{
                    MenuPedidos formulario = new MenuPedidos();
                    formulario.setVisible(true);
                    this.setVisible(false);
                }
                case 2 ->{
                    MenuClientes formulario = new MenuClientes();
                    formulario.setVisible(true);
                    this.setVisible(false);
                }
                case 3 ->{
                    MenuReportes formulario = new MenuReportes();
                    formulario.setVisible(true);
                    this.setVisible(false);
                }
                default ->{
                    JOptionPane.showMessageDialog(this, "Opcion no valida, ingrese una opcion entre el 1 y 3 ", "Opcion Invalida",JOptionPane.WARNING_MESSAGE);
                }
            }
            Opcion.setText("");                
        } catch (NumberFormatException e){
            JOptionPane.showMessageDialog(this, "Opcion no valida", "Entrada Invalida",JOptionPane.ERROR_MESSAGE);
            Opcion.setText("");
        }
    }                                       

    private void SalirActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        System.exit(0);    
    }                                     

