    private void botonPedidosActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // Verificar si el botón que activó el evento es el correcto
        if (evt.getSource().equals(botonPedidos)) {
            // Mostrar MenuClientes
            menuPedidos.setVisible(true);
            // Ocultar la ventana actual
            this.setVisible(false);
        }
    }                                            

    private void botonClienteActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // Verificar si el botón que activó el evento es el correcto
        if (evt.getSource().equals(botonCliente)) {
            // Mostrar MenuClientes
            menuClientes.setVisible(true);
            // Ocultar la ventana actual
            this.setVisible(false);
        }
    }                                            

    private void botonRegistroActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // Verificar si el botón que activó el evento es el correcto
        if (evt.getSource().equals(botonRegistro)) {
            // Mostrar MenuClientes
            menuReporte.setVisible(true);
            // Ocultar la ventana actual
            this.setVisible(false);
        }
    }                                             

